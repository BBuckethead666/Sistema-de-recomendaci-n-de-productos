<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.prog3.ui.RecommendationsController"
      spacing="10" style="-fx-padding: 15;"
      styleClass="recommendations">
    <Label fx:id="lblTitle" text="%label.recommended"/>
    <TableView fx:id="recommendTable">
        <columns>
            <TableColumn fx:id="colName" text="%form.name" prefWidth="150"/>
            <TableColumn fx:id="colCategory" text="%form.category" prefWidth="120"/>
            <TableColumn fx:id="colBrand" text="%form.brand" prefWidth="120"/>
            <TableColumn fx:id="colPrice" text="%form.price" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
