<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.prog3.ui.StoreController"
            stylesheets="@styles.css">

    <!-- Parte superior: título -->
    <top>
        <Label text="%main.title" styleClass="header"/>
    </top>

    <!-- Centro: catálogo de productos -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <GridPane fx:id="catalogGrid"
                      hgap="15" vgap="15"
                      style="-fx-padding: 15;" />
        </ScrollPane>
    </center>

    <!-- Derecha: carrito -->
    <right>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #fafafa;">
            <Label text="Carrito" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ListView fx:id="cartList" prefWidth="200" prefHeight="300" />
            
            <!-- Total del carrito -->
            <Label fx:id="totalLabel" text="%label.total" styleClass="total-label" />
            
            <!-- Botones de acción -->
            <Button text="%button.clearCart" onAction="#clearCart" styleClass="button-clear"/>
            <Button text="Checkout" onAction="#checkout" styleClass="button-checkout"/>
            <Button text="%button.goBack" onAction="#goBack"/>
        </VBox>
    </right>
</BorderPane>
