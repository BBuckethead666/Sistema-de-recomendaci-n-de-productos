<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.prog3.ui.MainController"
            stylesheets="@styles.css">

    <!-- Barra superior con selección de idioma -->
    <top>
        <ToolBar styleClass="tool-bar">
            <Label text="%main.title" styleClass="header"/>
            <Button text="%button.spanish" onAction="#setSpanish"/>
            <Button text="%button.english" onAction="#setEnglish"/>
        </ToolBar>
    </top>

    <!-- Centro: botones de navegación -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <Button text="%button.store" onAction="#openStoreView" prefWidth="200"/>
            <Button text="%button.admin" onAction="#openAdminView" prefWidth="200"/>
        </VBox>
    </center>
</BorderPane>
